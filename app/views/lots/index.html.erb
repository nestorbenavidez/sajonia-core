<p id="notice"><%= notice %></p>

<h1>Lots</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Imperfection</th>
      <th>Damage</th>
      <th>Quality</th>
      <th>Variety</th>
      <th>Certification</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lots.each do |lot| %>
      <tr>
        <td><%= lot.name %></td>
        <td><%= lot.imperfection %></td>
        <td><%= lot.damage %></td>
        <td><%= lot.quality %></td>
        <td><%= lot.variety %></td>
        <td><%= lot.certification %></td>
        <td><%= link_to 'Show', lot %></td>
        <td><%= link_to 'Edit', edit_lot_path(lot) %></td>
        <td><%= link_to 'Destroy', lot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lot', new_lot_path %>
